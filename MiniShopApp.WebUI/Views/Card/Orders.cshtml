@model List<OrderListModel>
    <h6 class="display-4">Orders</h6>
    <hr />
@foreach (var order in Model)
{
    <table class="table table-sm table-bordered mb-3">
        <thead>
            <tr class="bg-info">
                <th colspan="2">Order Id: #@order.OrderId</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td>
                    <img src="~/img/@orderItem.ImageUrl" alt="Alternate Text" width="30" />
                </td>
                <td>@orderItem.Name</td>
                <td>@orderItem.Price</td>
                <td>@orderItem.Quantity</td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="2">Customer Name:</th>
                <th>@order.FirstName @order.LastName</th>
                <td rowspan="7" class="text-center">Total: @order.TotalPrice().ToString("c")</td>
            </tr>
            <tr>
                <th colspan="2">Address:</th>
                <th>@order.Address</th>
            </tr>
            <tr>
                <th colspan="2">City:</th>
                <th>@order.City</th>
            </tr>
            <tr>
                <th colspan="2">Phone:</th>
                <th>@order.Phone</th>
            </tr>
            <tr>
                <th colspan="2">Email:</th>
                <th>@order.Email</th>
            </tr>
            <tr>
                <th colspan="2">Order Satus:</th>
                <th>@order.OrderState</th>
            </tr>
            <tr>
                <th colspan="2">Payment Type:</th>
                <th>@order.PaymentType</th>
            </tr>
        </tfoot>
    </table>
}